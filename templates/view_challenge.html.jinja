{% extends "base/base.html.jinja" %}
{% import "base/challenge_tabs.html.jinja" as challenge_tabs %}
{% import "base/test_cases.html.jinja" as test_cases %}

{% macro comment(com) %}
  <div class="comment">
    <div class="comment-author">
      <a href="/users/{{ com.author_id }}">
        <img src="{{ com.author_avatar }}" width="64" alt="{{ com.author_username }}">
        <div class="comment-author-name">
          {{ com.author_username }}
        </div>
      </a>
      <form class="comment-reactions" method="post" action="/challenge/{{ object.id }}/{{ object.name | slugify }}/view/vote">
        <input type="hidden" name="comment_id" value="{{ com.id }}">
        <button type="submit" name="is_upvote" value="true"
          title="{%- for reaction in com.up_reactions -%}
            {{- reaction.author_username -}}, 
            {%- endfor -%}">
          {{ com.up_reactions | length }} üëç
        </button>
        <button type="submit" name="is_upvote" value="false"
          title="{%- for reaction in com.down_reactions -%}
            {{- reaction.author_username -}}, 
            {%- endfor -%}">
          {{ com.down_reactions | length }} üëé
        </button>
      </form>
    </div>

    <div class="comment-content">
      {{ com.message | markdown }}
    </div>

    <div class="comment-children">
      {% for child in com.children %}
        {{ self::comment(com=child) }}
      {% endfor %}
    </div>

    {% if account and account.has_solved_a_challenge %}
      <form class="comment-reply" method="post" action="/challenge/{{ object.id }}/{{ object.name | slugify }}/view">
        <input type="hidden" name="parent" value="{{ com.id }}">
        <textarea name="message" placeholder="reply" class="textarea-small"></textarea>
        <button type="submit">Submit</button>
      </form>
    {% endif %}
  </div>
{% endmacro %}

{% block content %}
  {% if object.id %}
    {{ challenge_tabs::challenge_tabs(active="view", id=object.id, name=object.name, author=object.author) }}
  {% endif %}
  <h1>{{ object.name }}</h1>
  {{ object.description | markdown }}
  <h2>Judge</h2>
  <pre class="code-pre">{{- object.judge -}}</pre>
  <h2>Example Code</h2>
  <pre class="code-pre">
    {{-
      object.example_code
    -}}
  </pre>

  <h2>Comments</h2>

  {% for comment in object.comments %}
    {{ self::comment(com=comment) }}
  {% endfor %}

  {% if account and account.has_solved_a_challenge %}
    <form class="comment-reply" method="post" action="/challenge/{{ object.id }}/{{ object.name | slugify }}/view">
      <textarea name="message"></textarea>
      <button type="submit">Submit</button>
    </form>
  {% endif %}

{% endblock content %}
